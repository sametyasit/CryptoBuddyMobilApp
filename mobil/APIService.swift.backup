                    return try await fetchFromCoinMarketCap(page: page, perPage: perPage, cacheKey: cacheKey)
                } catch {
                    print("âš ï¸ CoinMarketCap API hatasÄ±: \(error.localizedDescription)")
                    throw APIError.allAPIsFailed
                }
            }
        }
    }
    
